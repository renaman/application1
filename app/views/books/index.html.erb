<body>
<h2>Books</h2>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= book.title %>
			</td>
			<td>
				<%= book.body %>
			</td>
			<td>
				<%=link_to "show", book_path(book.id) %>
				<%=link_to "edit", edit_book_path(book.id) %>
				<%=link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<h3>New book</h3>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
	 	<% @book.errors.full_messages.each do |message| %>
	 	    <div>1 error prohibited this book from being saved:</div>
	   		<%= message %>
	 	<% end %>
	<% end %>
　　<div class="form">Title</div>
　　<div align="left"><%= f.text_field :title %></div>
　　<div class="form">Body</div>
　　<div align="left"><%= f.text_area :body %></div>
　　<div><%= f.submit 'Create Book' %></div>
<% end %>
</body>
